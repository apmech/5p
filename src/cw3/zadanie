const fs = require('fs');

fs.readFile('tekst.txt', 'utf8', (err, data) => {
  if (err) {
    console.error('Błąd podczas odczytu pliku:', err);
    return;
  }


  const liczbaZnakow = data.length;


  const wynik = Liczba znaków w pliku: ${liczbaZnakow};
  fs.writeFile('wynik.txt', wynik, (err) => {
    if (err) {
      console.error('Błąd podczas zapisu pliku:', err);
    } else {
      console.log('Zapisano wynik do pliku wynik.txt');
    }
  });
});